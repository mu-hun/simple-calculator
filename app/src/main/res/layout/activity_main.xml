<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:text="@string/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/result" android:textSize="30sp"
            android:textColor="@color/colorAccent" android:layout_marginTop="30dp" android:textAlignment="center"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/A"
            android:id="@+id/inputA" android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
            android:layout_marginTop="20dp" android:textSize="30sp"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/B"
            android:id="@+id/inputB" android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
            android:textSize="30sp"/>
    <Button
            android:text="@string/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plus" android:layout_marginTop="30dp" android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" android:textSize="36sp"/>
    <Button
            android:text="@string/minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minus" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
            android:layout_marginTop="20dp" android:textSize="36sp"/>
    <Button
            android:text="@string/multiply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multiply" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
            android:layout_marginTop="20dp" android:textSize="36sp"/>
    <Button
            android:text="@string/division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/division" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
            android:layout_marginTop="20dp" android:textSize="36sp"/>
</LinearLayout>